<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">



<div class="row">
    <div class="col-9">
        <h2 class="text-white">Lp Assignment</h2>
    </div>
    <div class="col-3">
    <button class="btn btn-light pull-right btn-sm" id="btnOpen">
            <i class="fas fa-plus"> </i> &nbsp; New Item 
        </button>
    </div>
</div>
<div class="border p-2 m-2">
    <table id="tblData" class="table table-striped table-bordered bg-gray text-black">
        <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
                <th>Value2</th>
                <th>Description</th>
                <th>Created</th>
                <th>LastModified</th>
                <th>IsDeleted</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
    
</div>
<div class="modal fade modal" id="settingModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header" style="background-color:black;color:white;">
                <h4 class="modal-title"></h4>
                <button type="button" class="close btn btn-danger" data-dismiss="modal">&times;</button>
               
            </div>
            <div class="modal-body">
                <form method="post">
                     <div class="form-group" hidden>
                      
                            <div class="col-8">
                                <input type="hidden" class="form-control" id="ItemId" />  
                            </div>
                        </div>
                    <div class="form-group">
                           <label>key</label>
                            <div class="col-8">
                                <input type="text" placeholder="Enter key" class="form-control" id="Key" />  
                            </div>
                        </div>
                  <div class="form-group">
                           <label>Value</label>
                            <div class="col-8">
                            <input type="text" placeholder="Enter Value" class="form-control" id="Value" />
                        </div>

                        </div>
                        <div class="form-group">
                        <label>Value2</label>
                            <div class="col-8">
                            <input type="text" placeholder="Enter Value2" class="form-control" id="Value2" />
                        </div>

                        </div>
                    <div class="form-group">
                        <label>Description</label>
                        <div class="col-8">
                            <input type="text" placeholder="Enter Description" class="form-control" id="Description" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label>Created</label>
                        <div class="input-group input-daterange month" data-date-format="dd, M yyyy">
                            <input placeholder="Created Date" data-date-format="dd-M-yyyy" value="@DateTime.Now.ToString("dd-MMM-yyyy")" class="datepicker form-control readonly" data-val="true" id="Created" type="datetime"/>
                        </div>

                        

                    </div>
                    
                   
                </form>
                
            </div>
            <div class="modal-footer"style="background-color:dimgrey">
                <button type="button" class="btn btn-sucess btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger" onclick="addItem()" id="AddsettingModal">Save</button>
                <button class="btn btn-danger" onclick="UpdateItem()" id="updatesettingModal" style="display:none">Update</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/Index.js"></script>

}


